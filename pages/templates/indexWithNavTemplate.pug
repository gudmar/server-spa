extends ./indexTemplate.pug

block content
    .content-container
        .title #{title}
        .navigation(id='navigation')
            ul.nav
                each item in navigations
                    if (item.scripts && item.scripts.length)
                        li(data-endpoint=item.endpoint data-scripts = item.scripts.join('|') data-role='nav-item' class='nav-item') #{item.caption}
                    else
                        li(data-endpoint=item.endpoint data-role='nav-item' class='nav-item') #{item.caption}
